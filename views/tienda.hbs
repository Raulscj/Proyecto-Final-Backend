<!--Carrito de compra-->
<div class='container mt-3'>
	<a class='navbar-brand'>
		<h5>Carrito de compras</h5>
	</a>
	<table class='table table-hover'>

		<thead>
			<tr>
				<th scope='col'>#</th>
				<th scope='col'>Producto</th>
				<th scope='col'>Descripcion</th>
				<th scope='col'>Precio</th>
				<th scope='col'>Quitar del Carrito</th>
			</tr>
		</thead>
		<!--Tabla del carrito-->

		<tbody>
			{{#each Registro}}
				<tr>
					<th scope='row'>-</th>
					<td>{{nombre}}</td>
					<td>{{descripcion}}</td>
					<td>{{precio}}</td>
					<th scope='col'>
						<a href='/Quitado/{{_id}}' class='btn btn-outline-danger'>
							Quitar</a></th>
				</tr>
			{{/each}}
		</tbody>
	</table>
	<div class='row w-100'>
			<div class='col-sm-6'><b>TOTAL A PAGAR</b></div>
			<div class='col-sm-6 text-end'>{{total_a_pagar}}$</div>
	</div>			
	<hr />
</div>
<!--Finalizar compra-->
<div class='container mt-3'>
	<a href='/Logout' class='btn btn-outline-danger'>
		Finalizar compra</a>
</div>
<div class='container mt-3'>
	<p><em>Para listar todos los productos, escribe all en ambas entradas:
		</em></p>
</div>
<!--Botones para buscar-->
<div class='container mt-3'>
	<form action='/BuscarT' method='POST'>
		<div class='row w-100'>
			<div class='col-sm-4'>
				<input
					type='text'
					name='atributo'
					placeholder='Propiedad a buscar {nombre,tipo,marca...}'
					class='form-control mt-2'
					required='required'
				/>
				<input
					type='text'
					name='dato'
					placeholder='Buscar'
					class='form-control mt-2'
					required='required'
				/>
			</div>

			<div class='col-sm-4'>
				<button
					class='btn btn-md mt-2 btn btn-outline-Dark font-weight-bold'
				>Buscar</button>
			</div>
		</div>
	</form>
	<hr />
</div>
<!--Tabla de productos-->
<div class='container mt-3'>
	<table class='table mt-3'>
		<thead class='thead-dark'>
			<tr>
				<th scope='col'>Nombre</th>
				<th scope='col'>Marca</th>
				<th scope='col'>Descripcion</th>
				<th scope='col'>Existencia</th>
				<th scope='col'>Tipo</th>
				<th scope='col'>Precio</th>
				<th scope='col'>Agregar al carrito</th>
			</tr>
		</thead>
		<tbody>
			{{#each Producto}}
				<tr>
					<td>{{nombre}}</td>
					<td>{{marca}}</td>
					<td>{{descripcion}}</td>
					<td>{{existencia}}</td>
					<td>{{tipo}}</td>
					<td>{{precio}}</td>
					<th scope='col'>
						<a href='/Agregado/{{_id}}' class='btn btn-outline-success'>
							Agregar</a></th>
				</tr>
			{{/each}}

		</tbody>

	</table>
</div>